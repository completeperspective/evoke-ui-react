{
  "name": "evoke-ui-workspace",
  "private": false,
  "type": "module",
  "scripts": {
    "build": "pnpm --filter @evoke-ui/react build",
    "dev": "pnpm --filter @evoke-ui/react dev",
    "lint": "eslint packages/*/src --ext .ts,.tsx",
    "lint:fix": "eslint packages/*/src --ext .ts,.tsx --fix",
    "type-check": "tsc --noEmit",
    "format": "prettier --write \"**/*.{ts,tsx,json,md,scss,css}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,json,md,scss,css}\"",
    "clean": "pnpm --filter @evoke-ui/react clean",
    "test": "pnpm --filter @evoke-ui/react test"
  },
  "devDependencies": {
    "@types/node": "^24.3.0",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "husky": "^9.0.10",
    "lint-staged": "^15.2.0",
    "prettier": "^3.2.4",
    "typescript": "^5.3.3"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,scss,css}": [
      "prettier --write"
    ]
  },
  "engines": {
    "node": ">=22.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.15.1",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/completeperspective/evoke-ui-react.git"
  },
  "bugs": {
    "url": "https://github.com/completeperspective/evoke-ui-react/issues"
  },
  "homepage": "https://completeperspective.github.io/evoke-ui-react/"
}
