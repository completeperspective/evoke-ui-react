{
  "name": "@evoke-ui/react",
  "version": "0.3.0",
  "private": false,
  "description": "A themable React component library built on shadcn/ui with OKLCH color space and runtime theming",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./styles": {
      "sass": "./src/styles/index.scss",
      "css": "./dist/styles.css"
    },
    "./styles.css": "./dist/styles.css",
    "./tailwind.css": "./dist/tailwind.css",
    "./tailwind-v3": "./dist/tailwind-preset-v3.js"
  },
  "files": [
    "dist",
    "src/styles"
  ],
  "sideEffects": [
    "*.css",
    "*.scss"
  ],
  "scripts": {
    "dev": "storybook dev -p 6006",
    "build": "npm run build:lib && npm run build:styles",
    "build:lib": "tsup",
    "build:styles": "npm run build:sass && npm run build:tailwind",
    "build:sass": "sass src/styles/index.scss dist/styles.css --style compressed",
    "build:tailwind": "npx @tailwindcss/cli --input src/styles/tailwind.css --output dist/tailwind.css --minify",
    "build:watch": "concurrently \"npm run build:lib -- --watch\" \"npm run build:sass -- --watch\"",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist",
    "preview": "vite preview",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "test:package": "node scripts/test-package.mjs",
    "test:package:verbose": "node scripts/test-package.mjs --verbose",
    "test:package:keep": "node scripts/test-package.mjs --skip-cleanup",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build --output-dir ../../storybook-static",
    "build-storybook:optimized": "npm run build-storybook:clean && STORYBOOK_PERFORMANCE_LOG=true storybook build --output-dir ../../storybook-static --webpack-stats-json",
    "build-storybook:clean": "rm -rf ../../storybook-static",
    "build-storybook:analyze": "npm run build-storybook:optimized && npx webpack-bundle-analyzer ../../storybook-static/storybook-stats.json",
    "deploy-docs": "gh-pages -d storybook-static -m 'Deploy Storybook documentation [skip ci]'",
    "deploy-docs:clean": "gh-pages -d storybook-static -m 'Deploy Storybook documentation [skip ci]' --remove '*.html' --remove '*.js' --remove '*.css' --remove 'static'",
    "preview-docs": "npx serve storybook-static -p 6006 -s",
    "preview-docs:gzip": "npx serve storybook-static -p 6006 -s --compression",
    "docs:build": "npm run build && npm run build-storybook:optimized",
    "docs:build:fast": "npm run build && npm run build-storybook",
    "docs:deploy": "npm run docs:build && npm run deploy-docs",
    "docs:deploy:fast": "npm run docs:build:fast && npm run deploy-docs",
    "docs:preview-local": "npm run docs:build && npm run preview-docs:gzip",
    "docs:performance": "npm run build-storybook:analyze"
  },
  "peerDependencies": {
    "react": "^18.0.0 || ^19.0.0",
    "react-dom": "^18.0.0 || ^19.0.0"
  },
  "dependencies": {
    "@radix-ui/colors": "^3.0.0",
    "@radix-ui/react-alert-dialog": "^1.1.15",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/themes": "^2.0.3",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.0",
    "tailwind-merge": "^2.2.0"
  },
  "devDependencies": {
    "@storybook/addon-a11y": "^9.0.8",
    "@storybook/addon-measure": "^9.0.8",
    "@storybook/manager-api": "9.0.0-alpha.1",
    "@storybook/react-vite": "^9.0.8",
    "@storybook/theming": "9.0.0-alpha.1",
    "@tailwindcss/cli": "^4.1.12",
    "@tailwindcss/vite": "^4.0.0-alpha.14",
    "@testing-library/jest-dom": "^6.2.0",
    "@testing-library/react": "^14.1.2",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^24.3.0",
    "@types/react": "^18.2.48",
    "@types/react-dom": "^18.2.18",
    "@vitejs/plugin-react": "^4.2.1",
    "@vitest/ui": "^1.2.2",
    "autoprefixer": "^10.4.21",
    "concurrently": "^8.2.2",
    "cssnano": "^7.1.1",
    "eslint-plugin-storybook": "^9.0.8",
    "gh-pages": "^6.3.0",
    "jsdom": "^26.1.0",
    "sass": "^1.70.0",
    "serve": "^14.2.4",
    "storybook": "^9.0.8",
    "tailwindcss": "^4.0.0-alpha.14",
    "terser": "^5.43.1",
    "tsup": "^8.0.1",
    "vite": "^5.0.12",
    "vitest": "^1.2.2",
    "webpack-bundle-analyzer": "^4.10.2"
  },
  "keywords": [
    "react",
    "component-library",
    "ui-components",
    "design-system",
    "tailwindcss",
    "shadcn",
    "oklch",
    "theming"
  ],
  "author": "",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/completeperspective/evoke-ui.git"
  },
  "bugs": {
    "url": "https://github.com/completeperspective/evoke-ui/issues"
  },
  "homepage": "https://github.com/completeperspective/evoke-ui#readme"
}
